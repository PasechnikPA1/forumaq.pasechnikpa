@page "/admin/users"
@attribute [Authorize(Policy = "AdminOnly")]
@rendermode InteractiveServer

@using ForumAQ.Data
@using ForumAQ.Data.Services
@using Microsoft.AspNetCore.Authorization
@inject UserService UserService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<PageTitle>Управление пользователями - ForumAQ</PageTitle>

<h1>Управление пользователями</h1>

@if (users == null)
{
    <div class="alert alert-info">Загрузка пользователей...</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Имя пользователя</th>
                    <th>Отображаемое имя</th>
                    <th>Email</th>
                    <th>Роли</th>
                    <th>Вопросы</th>
                    <th>Ответы</th>
                    <th>Отправлено благ.</th>
                    <th>Получено благ.</th>
                    <th>Дата регистрации</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.DisplayName</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.Roles.Any())
                            {
                                <div class="badge-group">
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-primary me-1">@role</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">Нет ролей</span>
                            }
                        </td>
                        <td>@user.QuestionsAsked</td>
                        <td>@user.AnswersGiven</td>
                        <td>@user.ThanksCount</td>
                        <td>
                            <span class="badge @GetThanksBadgeClass(user.ThanksReceived)">
                                @user.ThanksReceived
                            </span>
                        </td>
                        <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            <button class="btn btn-sm btn-info me-1" @onclick="() => EditUser(user.Id)">
                                <i class="bi bi-pencil"></i> Роли
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteUser(user.Id, user.UserName)">
                                <i class="bi bi-trash"></i> Удалить
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (showEditModal)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Изменение ролей пользователя</h5>
                    <button type="button" class="btn-close" @onclick="CloseEditModal"></button>
                </div>
                <div class="modal-body">
                    @if (editingUser != null)
                    {
                        <div class="mb-3">
                            <label class="form-label">Пользователь: <strong>@editingUser.UserName</strong></label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Выберите роли:</label>
                            @if (allRoles != null)
                            {
                                @foreach (var role in allRoles)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="role_@role"
                                               value="@role"
                                               checked="@selectedRoles.Contains(role)"
                                               @onchange="@((e) => OnRoleCheckboxChange(e, role))" />
                                        <label class="form-check-label" for="role_@role">@role</label>
                                    </div>
                                }
                            }
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseEditModal">Отмена</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveUserRoles">Сохранить</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<UserDto>? users;
    private List<string>? allRoles;
    private UserDto? editingUser;
    private List<string> selectedRoles = new();
    private bool showEditModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
        allRoles = await UserService.GetAllRolesAsync();
    }

    private async Task LoadUsers()
    {
        users = await UserService.GetAllUsersAsync();
    }

    private async Task EditUser(string userId)
    {
        editingUser = await UserService.GetUserByIdAsync(userId);
        if (editingUser != null)
        {
            selectedRoles = new List<string>(editingUser.Roles);
            showEditModal = true;
        }
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        editingUser = null;
        selectedRoles.Clear();
    }

    private void OnRoleCheckboxChange(ChangeEventArgs e, string role)
    {
        var isChecked = (bool?)e.Value ?? false;

        if (isChecked)
        {
            if (!selectedRoles.Contains(role))
                selectedRoles.Add(role);
        }
        else
        {
            selectedRoles.Remove(role);
        }
    }

    private async Task SaveUserRoles()
    {
        if (editingUser != null)
        {
            var success = await UserService.UpdateUserRolesAsync(editingUser.Id, selectedRoles);
            if (success)
            {
                await LoadUsers();
                CloseEditModal();
            }
        }
    }

    private async Task DeleteUser(string userId, string userName)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            $"Вы уверены, что хотите удалить пользователя '{userName}'? Это действие необратимо.");

        if (confirmed)
        {
            var success = await UserService.DeleteUserAsync(userId);
            if (success)
            {
                await LoadUsers();
            }
        }
    }
    private string GetThanksBadgeClass(int thanksCount)
    {
        return thanksCount switch
        {
            > 50 => "bg-success",
            > 20 => "bg-primary",
            > 5 => "bg-info",
            > 0 => "bg-secondary",
            _ => "bg-light text-dark"
        };
    }
}