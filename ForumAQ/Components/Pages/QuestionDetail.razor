@code {
    [Parameter]
    public int QuestionId { get; set; }

    private Question? question;
    private Answer newAnswer = new();
    private bool isSubmitting = false;
    private string? currentUserId;
    private bool isThanking = false;
    private List<int> thankedAnswers = new();
    private bool IsModeratorOrAdmin = false;
    private bool showDeleteQuestionModal = false;
    private bool showDeleteAnswerModal = false;
    private int answerToDeleteId;
    private string answerAuthorId = string.Empty;
    private string answerAuthorName = string.Empty;
    private bool isProcessing = false;

    // Для бана пользователя
    private bool isUserBanned = false;
    private string banEndDate = "определенной даты";

    // Для модалки удаления вопроса
    private bool banQuestionUser = false;
    private int banQuestionDays = 1;
    private string banQuestionReason = "Нарушение правил сообщества";

    // Для модалки удаления ответа
    private bool banAnswerUser = false;
    private int banAnswerDays = 1;
    private string banAnswerReason = "Нарушение правил сообщества";

    protected override async Task OnInitializedAsync()
    {
        await LoadQuestion();

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        // Проверяем права модератора/админа
        IsModeratorOrAdmin = user.IsInRole("Admin") || user.IsInRole("Moderator");

        // Проверяем, забанен ли пользователь
        await CheckUserBanStatus();
    }

    private async Task LoadQuestion()
    {
        question = await ForumService.GetQuestionByIdAsync(QuestionId);
        if (question != null)
        {
            // Увеличиваем счетчик просмотров
            await ForumService.IncrementViewCountAsync(QuestionId);

            // Загружаем информацию о благодарностях текущего пользователя
            if (currentUserId != null)
            {
                foreach (var answer in question.Answers)
                {
                    var hasThanked = await ForumService.HasUserThankedAnswerAsync(answer.Id, currentUserId);
                    if (hasThanked)
                    {
                        thankedAnswers.Add(answer.Id);
                    }
                }
            }
        }
        else
        {
            Navigation.NavigateTo("/forum");
        }
    }

    private async Task CheckUserBanStatus()
    {
        if (string.IsNullOrEmpty(currentUserId))
        {
            isUserBanned = false;
            return;
        }

        isUserBanned = await ForumService.IsUserBannedAsync(currentUserId);

        if (isUserBanned)
        {
            var activeBan = await GetActiveBanAsync();
            if (activeBan != null)
            {
                banEndDate = activeBan.BannedUntil.ToString("dd.MM.yyyy HH:mm");
            }
        }
    }

    private async Task SubmitAnswer()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (!user.Identity.IsAuthenticated)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Для ответа необходимо авторизоваться");
            Navigation.NavigateTo("/Account/Login");
            return;
        }

        isSubmitting = true;

        try
        {
            newAnswer.QuestionId = QuestionId;
            var userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            await ForumService.CreateAnswerAsync(newAnswer, userId);
            await LoadQuestion(); // Перезагружаем вопрос с новыми ответами

            newAnswer = new Answer(); // Сбрасываем форму
            await JSRuntime.InvokeVoidAsync("alert", "Ответ успешно добавлен!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка при добавлении ответа: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task ThankAnswer(int answerId)
    {
        if (string.IsNullOrEmpty(currentUserId))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Для отправки благодарности необходимо авторизоваться");
            Navigation.NavigateTo("/Account/Login");
            return;
        }

        isThanking = true;

        try
        {
            var success = await ForumService.AddThanksToAnswerAsync(answerId, currentUserId);

            if (success)
            {
                thankedAnswers.Add(answerId);
                await LoadQuestion(); // Перезагружаем для обновления счетчиков
                await JSRuntime.InvokeVoidAsync("alert", "Благодарность отправлена!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Вы уже поблагодарили за этот ответ");
            }
        }
        catch (Exception)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Произошла ошибка при отправке благодарности");
        }
        finally
        {
            isThanking = false;
        }
    }

    private bool HasUserThankedAnswer(int answerId)
    {
        return thankedAnswers.Contains(answerId);
    }

    private async Task MarkAsHelpful(int answerId)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            "Отметить этот ответ как полезный?");

        if (confirmed)
        {
            await ForumService.MarkAnswerAsHelpfulAsync(answerId);
            await LoadQuestion(); // Перезагружаем для обновления статуса
        }
    }

    private bool CanMarkAsHelpful(Answer answer)
    {
        // Только автор вопроса может отметить ответ как полезный
        return currentUserId == question?.UserId && !answer.IsHelpful;
    }

    // Методы модерации
    private void ShowDeleteQuestionModal()
    {
        showDeleteQuestionModal = true;
        banQuestionUser = false;
        banQuestionDays = 1;
        banQuestionReason = "Нарушение правил сообщества";
    }

    private void ShowDeleteAnswerModal(int answerId, string authorId, string? authorName)
    {
        answerToDeleteId = answerId;
        answerAuthorId = authorId;
        answerAuthorName = authorName ?? "Неизвестный пользователь";
        showDeleteAnswerModal = true;
        banAnswerUser = false;
        banAnswerDays = 1;
        banAnswerReason = "Нарушение правил сообщества";
    }

    private async Task ConfirmDeleteQuestion()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var moderatorId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (string.IsNullOrEmpty(moderatorId))
            return;

        isProcessing = true;

        try
        {
            var success = await ForumService.DeleteQuestionWithModerationAsync(
                QuestionId,
                moderatorId,
                banQuestionUser,
                banQuestionUser ? banQuestionDays : null,
                banQuestionUser ? banQuestionReason : null);

            if (success)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Вопрос успешно удален" +
                    (banQuestionUser ? " и пользователь заблокирован" : ""));
                Navigation.NavigateTo("/forum");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Ошибка при удалении вопроса");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            showDeleteQuestionModal = false;
        }
    }

    private async Task ConfirmDeleteAnswer()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var moderatorId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (string.IsNullOrEmpty(moderatorId))
            return;

        isProcessing = true;

        try
        {
            var success = await ForumService.DeleteAnswerWithModerationAsync(
                answerToDeleteId,
                moderatorId,
                banAnswerUser,
                banAnswerUser ? banAnswerDays : null,
                banAnswerUser ? banAnswerReason : null);

            if (success)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Ответ успешно удален" +
                    (banAnswerUser ? " и пользователь заблокирован" : ""));
                await LoadQuestion(); // Перезагружаем страницу
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Ошибка при удалении ответа");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            showDeleteAnswerModal = false;
        }
    }

    private async Task<BanRecord?> GetActiveBanAsync()
    {
        if (string.IsNullOrEmpty(currentUserId))
            return null;

        return await ForumService.GetActiveBanAsync(currentUserId);
    }
}