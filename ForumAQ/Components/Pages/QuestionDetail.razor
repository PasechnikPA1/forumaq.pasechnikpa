@page "/forum/question/{QuestionId:int}"
@rendermode InteractiveServer
@using ForumAQ.Data
@using ForumAQ.Data.Services
@inject IForumService ForumService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime

<PageTitle>@(question?.Title ?? "Вопрос")</PageTitle>

@if (question == null)
{
    <div class="text-center mt-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Загрузка...</span>
        </div>
        <p class="mt-2">Загрузка вопроса...</p>
    </div>
}
else
{
    <div class="container mt-4">
        <!-- Хлебные крошки -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/forum">Форум</a></li>
                <li class="breadcrumb-item active">Вопрос</li>
            </ol>
        </nav>

        <!-- Кнопки модерации для вопроса -->
        @if (IsModeratorOrAdmin)
        {
            <div class="d-flex justify-content-end mb-3">
                <div class="btn-group">
                    <button class="btn btn-sm btn-outline-danger" @onclick="ShowDeleteQuestionModal">
                        Удалить вопрос
                    </button>
                </div>
            </div>
        }

        <!-- Вопрос -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h4 mb-0">@question.Title</h1>
                    @if (question.IsSolved)
                    {
                        <span class="badge bg-success">Решено</span>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <p class="card-text">@question.Description</p>
                </div>

                <!-- Теги и метаданные вопроса -->
                <div class="d-flex justify-content-between align-items-start mt-3">
                    <!-- Теги слева -->
                    <div>
                        @if (!string.IsNullOrEmpty(question.Tags))
                        {
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var tag in question.Tags.Split(' '))
                                {
                                    if (!string.IsNullOrWhiteSpace(tag))
                                    {
                                        <span class="badge bg-secondary">@tag</span>
                                    }
                                }
                            </div>
                        }
                    </div>

                    <!-- Метаданные справа -->
                    <div class="text-end">
                        <div class="text-muted small">
                            <div>Автор: @question.User?.DisplayName</div>
                            <div>Дата: @question.CreatedDate.ToString("dd.MM.yyyy HH:mm")</div>
                            <div>Просмотров: @question.ViewCount</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ответы -->
        <div class="mb-4">
            <h3 class="mb-3">
                Ответы
                <span class="badge bg-primary">@question.AnswerCount</span>
            </h3>

            @if (!question.Answers.Any())
            {
                <div class="alert alert-info">
                    Пока нет ответов. Будьте первым, кто ответит на этот вопрос!
                </div>
            }
            else
            {
                @foreach (var answer in question.Answers.OrderByDescending(a => a.IsHelpful).ThenByDescending(a => a.ThanksCount).ThenBy(a => a.CreatedDate))
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <p class="card-text mb-3">@answer.Content</p>

                            <!-- Информация об ответе -->
                            <div class="d-flex justify-content-between align-items-center">
                                <!-- Автор слева -->
                                <div class="d-flex align-items-center gap-2">
                                    <small class="text-muted">
                                        Автор: @answer.User?.DisplayName
                                    </small>
                                    @if (answer.IsHelpful)
                                    {
                                        <span class="badge bg-success">
                                            Полезный ответ
                                        </span>
                                    }
                                    @if (answer.ThanksCount > 0)
                                    {
                                        <span class="badge bg-light text-dark border">
                                            Благодарностей: @answer.ThanksCount
                                        </span>
                                    }
                                </div>

                                <!-- Дата и кнопки справа -->
                                <div class="d-flex align-items-center gap-2">
                                    <small class="text-muted">
                                        @answer.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                    </small>

                                    <!-- Кнопка благодарности -->
                                    @if (currentUserId != answer.UserId)
                                    {
                                        @if (HasUserThankedAnswer(answer.Id))
                                        {
                                            <span class="badge bg-success">
                                                Отблагодарили
                                            </span>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-success"
                                                    @onclick="() => ThankAnswer(answer.Id)"
                                                    disabled="@isThanking">
                                                Отблагодарить
                                            </button>
                                        }
                                    }

                                    @if (CanMarkAsHelpful(answer))
                                    {
                                        <button class="btn btn-sm btn-outline-primary"
                                                @onclick="() => MarkAsHelpful(answer.Id)">
                                            Отметить как решение
                                        </button>
                                    }

                                    <!-- Кнопки модерации для ответа -->
                                    @if (IsModeratorOrAdmin)
                                    {
                                        <button class="btn btn-sm btn-outline-danger"
                                                @onclick="() => ShowDeleteAnswerModal(answer.Id, answer.UserId, answer.User?.DisplayName)">
                                            Удалить ответ
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Форма для ответа -->
        @if (!isUserBanned)
        {
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Ваш ответ</h4>
                </div>
                <div class="card-body">
                    <EditForm Model="newAnswer" OnValidSubmit="SubmitAnswer" FormName="answerForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <InputTextArea @bind-Value="newAnswer.Content" class="form-control"
                                           rows="5"
                                           placeholder="Напишите ваш ответ здесь..." />
                            <ValidationMessage For="@(() => newAnswer.Content)" />
                            <div class="form-text">
                                Будьте вежливы и конструктивны в своем ответе.
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status"></span>
                                    <span>Отправка...</span>
                                }
                                else
                                {
                                    <span>Ответить</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <strong>Вы заблокированы!</strong> Вы не можете оставлять ответы до @banEndDate.
            </div>
        }
    </div>
}

<!-- Модальное окно удаления вопроса -->
@if (showDeleteQuestionModal)
{
    <div class="modal-container" style="display: flex;">
        <div class="modal-backdrop" @onclick="() => showDeleteQuestionModal = false"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Удаление вопроса</h5>
                <button type="button" class="close-btn" @onclick="() => showDeleteQuestionModal = false">×</button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <p>Вы уверены, что хотите удалить этот вопрос?</p>
                    <p class="text-danger"><strong>Пользователь:</strong> @(question?.User?.DisplayName ?? "Неизвестный автор")</p>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" @bind="banQuestionUser">
                    <label class="form-check-label">
                        Заблокировать пользователя
                    </label>
                </div>

                @if (banQuestionUser)
                {
                    <div class="mb-3">
                        <label class="form-label">Срок блокировки (дни):</label>
                        <select class="form-select" @bind="banQuestionDays">
                            <option value="1">1 день</option>
                            <option value="3">3 дня</option>
                            <option value="7">7 дней</option>
                            <option value="30">30 дней</option>
                            <option value="365">1 год (365 дней)</option>
                            <option value="8888">Навсегда </option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Причина блокировки:</label>
                        <textarea class="form-control" rows="3" @bind="banQuestionReason"
                                  placeholder="Укажите причину блокировки..."></textarea>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="() => showDeleteQuestionModal = false">Отмена</button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteQuestion" disabled="@isProcessing">
                    @if (isProcessing)
                    {
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                        <span>Удаление...</span>
                    }
                    else
                    {
                        <span>@(banQuestionUser ? "Удалить и заблокировать" : "Удалить")</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

