@page "/forum"
@rendermode InteractiveServer
@using ForumAQ.Data
@using ForumAQ.Data.Services
@using Humanizer
@inject IForumService ForumService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime

<PageTitle>Форум вопросов и ответов</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Вопросы и ответы</h1>
                <button class="btn btn-primary" @onclick="ShowQuestionModal">
                    Задать вопрос
                </button>
            </div>

            <!-- Строка поиска -->
            <div class="card mb-4 shadow-sm border-0">
                <div class="card-body p-3">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            🔍
                        </span>
                        <input type="text" 
                               class="form-control border-start-0 ps-0" 
                               placeholder="Поиск по вопросам..." 
                               @bind="searchQuery"
                               @bind:event="oninput"
                               @onkeyup="async (e) => await HandleSearchKeyUp(e)" />
                        @if (!string.IsNullOrEmpty(searchQuery))
                        {
                            <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                                Очистить
                            </button>
                        }
                    </div>
                    @if (isSearching)
                    {
                        <div class="text-muted mt-2">
                            <small>Ищем вопросы по запросу: "<strong>@searchQuery</strong>"</small>
                        </div>
                    }
                </div>
            </div>

            @if (questions == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Загрузка...</span>
                    </div>
                    <p class="mt-2">Загрузка вопросов...</p>
                </div>
            }
            else if (!questions.Any())
            {
                <div class="card text-center py-5">
                    <div class="card-body">
                        @if (isSearching)
                        {
                            <h3 class="text-muted">Ничего не найдено</h3>
                            <p class="text-muted">Попробуйте изменить поисковый запрос</p>
                            <button class="btn btn-outline-primary" @onclick="ClearSearch">
                                Показать все вопросы
                            </button>
                        }
                        else
                        {
                            <h3 class="text-muted">Пока нет вопросов</h3>
                            <p class="text-muted">Будьте первым, кто задаст вопрос!</p>
                            <button class="btn btn-primary" @onclick="ShowQuestionModal">
                                Задать первый вопрос
                            </button>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var question in questions)
                    {
                        <div class="list-group-item list-group-item-action mb-3 border rounded-3 shadow-sm">
                            <div class="d-flex w-100 justify-content-between">
                                <div class="w-75">
                                    <h5 class="mb-2">
                                        <a href="/forum/question/@question.Id" class="text-decoration-none text-dark">
                                            @question.Title
                                        </a>
                                        @if (question.IsSolved)
                                        {
                                            <span class="badge bg-success ms-2">
                                                Решено
                                            </span>
                                        }
                                        @if (DateTime.Now.Subtract(question.CreatedDate).TotalHours < 24)
                                        {
                                            <span class="badge bg-danger ms-2">Новый</span>
                                        }
                                    </h5>
                                    <p class="mb-2 text-muted">@question.Description.Truncate(200)</p>
                                    <div class="mt-2">
                                        @if (!string.IsNullOrEmpty(question.Tags))
                                        {
                                            @foreach (var tag in question.Tags.Split(' ').Take(5))
                                            {
                                                if (!string.IsNullOrWhiteSpace(tag))
                                                {
                                                    <span class="badge bg-light text-dark border me-1 mb-1">
                                                        @tag
                                                    </span>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="text-end w-25">
                                    <div class="d-flex flex-column align-items-end">
                                        <div class="mb-2">
                                            <small class="text-muted d-block">
                                                Автор: <span class="fw-medium">@question.User?.DisplayName</span>
                                            </small>
                                            <small class="text-muted d-block">
                                                @question.CreatedDate.ToString("dd.MM.yyyy")
                                            </small>
                                        </div>
                                        <div class="mt-auto">
                                            <div class="d-flex flex-column align-items-end gap-1">
                                                <small class="text-muted">
                                                    Просмотров: @question.ViewCount
                                                </small>
                                                <small class="text-muted">
                                                    Ответов: @question.AnswerCount
                                                </small>
                                            </div>
                                            <a href="/forum/question/@question.Id" 
                                               class="btn btn-sm btn-outline-primary mt-2">
                                                Ответить
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Модальное окно для создания вопроса -->
@if (showQuestionModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Задать новый вопрос</h5>
                    <button type="button" class="btn-close" @onclick="CloseQuestionModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="newQuestion" OnValidSubmit="CreateQuestion" FormName="questionForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        
                        <div class="mb-3">
                            <label class="form-label">Заголовок вопроса *</label>
                            <InputText @bind-Value="newQuestion.Title" class="form-control" 
                                      placeholder="Что вас интересует?" />
                            <ValidationMessage For="@(() => newQuestion.Title)" />
                            <div class="form-text">Будьте конкретны и кратко сформулируйте суть вопроса</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Подробное описание *</label>
                            <InputTextArea @bind-Value="newQuestion.Description" class="form-control" 
                                          rows="6" 
                                          placeholder="Опишите ваш вопрос подробно. Чем больше деталей, тем лучше ответ." />
                            <ValidationMessage For="@(() => newQuestion.Description)" />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">
                                Теги 
                                <small class="text-muted">(через пробел, например: c# blazor asp.net)</small>
                            </label>
                            <InputText @bind-Value="newQuestion.Tags" class="form-control" 
                                      placeholder="#сон #программирование #совет" />
                            <div class="form-text">
                                Добавьте до 5 тегов. Начинайте с # или просто пишите слова
                            </div>
                        </div>
                        
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseQuestionModal">
                                Отмена
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status"></span>
                                    <span>Создание...</span>
                                }
                                else
                                {
                                    <span>Задать вопрос</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Question>? questions;
    private bool showQuestionModal = false;
    private Question newQuestion = new();
    private bool isSubmitting = false;
    private string searchQuery = "";
    private bool isSearching = false;
    private CancellationTokenSource? searchCts;
    private Timer? searchTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadQuestions();
    }

    private async Task LoadQuestions()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            questions = await ForumService.GetQuestionsAsync();
            isSearching = false;
        }
        else
        {
            isSearching = true;
            questions = await ForumService.SearchQuestionsAsync(searchQuery);
        }
        StateHasChanged();
    }

    private async Task HandleSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await PerformSearch();
        }
        else
        {
            // Отложенный поиск при вводе (debounce)
            searchCts?.Cancel();
            searchCts = new CancellationTokenSource();
            
            await Task.Delay(500, searchCts.Token);
            await PerformSearch();
        }
    }

    private async Task PerformSearch()
    {
        await LoadQuestions();
    }

    private async Task ClearSearch()
    {
        searchQuery = "";
        await LoadQuestions();
    }

    private void ShowQuestionModal()
    {
        newQuestion = new Question();
        showQuestionModal = true;
    }

    private void CloseQuestionModal()
    {
        showQuestionModal = false;
        newQuestion = new Question();
        isSubmitting = false;
    }

    private async Task CreateQuestion()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        
        if (!user.Identity.IsAuthenticated)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Для создания вопроса необходимо авторизоваться");
            Navigation.NavigateTo("/Account/Login");
            return;
        }

        isSubmitting = true;
        
        try
        {
            var userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            if (string.IsNullOrEmpty(userId))
            {
                throw new Exception("Не удалось получить ID пользователя");
            }

            // Очищаем теги от лишних символов
            if (!string.IsNullOrEmpty(newQuestion.Tags))
            {
                newQuestion.Tags = string.Join(" ", 
                    newQuestion.Tags.Split(' ')
                        .Where(t => !string.IsNullOrWhiteSpace(t))
                        .Select(t => t.TrimStart('#'))
                        .Take(5));
            }

            await ForumService.CreateQuestionAsync(newQuestion, userId);
            await LoadQuestions();
            CloseQuestionModal();
            
            await JSRuntime.InvokeVoidAsync("alert", "Вопрос успешно создан!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка при создании вопроса: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public void Dispose()
    {
        searchCts?.Cancel();
        searchTimer?.Dispose();
    }
}

