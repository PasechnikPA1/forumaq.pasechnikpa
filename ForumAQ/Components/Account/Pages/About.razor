@page "/about"
@rendermode InteractiveServer

<PageTitle>О проекте - ForumAQ</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">О проекте Forum A&Q</h4>
                </div>
                <div class="card-body">
                    <!-- Информация об авторе -->
                    <div class="text-center mb-4">
                        <h3 class="text-primary">Вариант 17</h3>
                        <h4>Пасечник Павел</h4>
                        <h5 class="text-muted">АСОиУб-24-1</h5>
                    </div>

                    <hr />

                    <!-- Название проекта -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2 mb-3">Название проекта:</h5>
                        <div class="alert alert-primary">
                            <h4 class="mb-0 text-center">"Форум вопросов и ответов"</h4>
                        </div>
                    </div>

                    <!-- Описание проекта -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2 mb-3">Описание проекта:</h5>
                        <p class="fs-5">Платформа для обмена знаниями и обсуждения тем.</p>
                    </div>

                    <!-- Техническое задание -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2 mb-3">Техническое задание:</h5>
                        <div class="list-group">
                            <div class="list-group-item">
                                <strong>1.</strong> Создать классы для вопросов, ответов и пользователей
                            </div>
                            <div class="list-group-item">
                                <strong>2.</strong> Разработать интерфейс для добавления тем и обсуждений
                            </div>
                            <div class="list-group-item">
                                <strong>3.</strong> Включить функции рейтинга и модерации контента
                            </div>
                            <div class="list-group-item">
                                <strong>4.</strong> Использовать Blazor в качестве Web-интерфейса и для быстрой навигации по форуму
                            </div>
                        </div>
                    </div>

                    <!-- Реализованные функции -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2 mb-3">Реализованные функции:</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <ul>
                                    <li>Регистрация и авторизация пользователей</li>
                                    <li>Роли: Админ, Модератор, Пользователь</li>
                                    <li>Создание и редактирование вопросов</li>
                                    <li>Добавление ответов к вопросам</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul>
                                    <li>Система благодарностей за ответы</li>
                                    <li>Поиск по вопросам</li>
                                    <li>Управление пользователями (админ)</li>
                                    <li>Профиль пользователя</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Кнопка возврата -->
                    <div class="text-center mt-4">
                        <a href="/" class="btn btn-primary">На главную</a>
                    </div>
                </div>
                <div class="card-footer text-center text-muted">
                    © 2024 Forum A&Q - Пасечник Павел. Все права защищены.
                </div>
            </div>
        </div>
    </div>
</div>